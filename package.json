	"scripts": {
		"postinstall": "npm run setup:monaco",
		"setup:monaco": "node scripts/copy-monaco-workers.js",
		"models:pull": "node-llama-cpp pull --dir ./models \"hf:CompendiumLabs/bge-small-en-v1.5-gguf:Q8_0\" \"hf:bartowski/deepseek-ai_DeepSeek-R1-0528-Qwen3-8B-GGUF:Q6_K_L\" \"hf:bartowski/Qwen_Qwen3-8B-GGUF:Q6_K\" \"hf:Qwen/Qwen3-4B-GGUF:Q4_K_M\" \"hf:Qwen/Qwen3-1.7B-GGUF:Q8_0\" \"hf:Qwen/Qwen3-0.6B-GGUF:Q8_0\"",
		"start": "vite dev",
		"start:build": "electron ./dist-electron",
		"prebuild": "rimraf ./dist ./dist-electron ./release",
		"build": "tsc && vite build && electron-builder --config ./electron-builder.ts",
		"lint": "oxlint . && prettier . --check",
		"clean": "rm -rf ./node_modules ./dist ./dist-electron ./release ./models",
		"chroma": "docker run -p 8000:8000 -v ./data:/data ghcr.io/chroma-core/chroma:latest",
		"ingest": "node scripts/generateEmbeddings.js",
		"test": "npm run test:main && npm run test:renderer",
		"test:renderer": "vitest run --config vitest.config.renderer.ts",
		"test:main": "vitest run --config vitest.config.main.ts",
		"test:ui": "vitest --ui"
	},
